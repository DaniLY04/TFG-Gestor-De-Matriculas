<odoo>
    <!-- Vista de formulario para el modelo gestor_de_matriculas.curso -->
    <record id="view_curso_form" model="ir.ui.view">
        <field name="name">gestor_de_matriculas.curso.form</field>
        <field name="model">gestor_de_matriculas.curso</field>
        <field name="arch" type="xml">
            <form string="Curso">
                <sheet>
                    <group>
                        <field name="id_course"/>
                        <field name="name"/>
                        <field name="year"/>
                        <field name="promotion"/>
                        <field name="shift"/>
                        <field name="total_hours"/>
                        <field name="tutor"/>
                        <field name="teachers" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Alumnos">
                            <field name="students">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="lastName"/>
                                    <field name="latest_study"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para el modelo gestor_de_matriculas.curso -->
    <record id="view_curso_list" model="ir.ui.view">
        <field name="name">gestor_de_matriculas.curso.list</field>
        <field name="model">gestor_de_matriculas.curso</field>
        <field name="arch" type="xml">
            <list string="Cursos">
                <field name="id_course"/>
                <field name="name"/>
                <field name="shift"/>
                <field name="year"/>
                <field name="tutor"/>
            </list>
        </field>
    </record>

    <!-- AcciÃ³n para acceder al modelo gestor_de_matriculas.curso -->
    <record id="action_curso" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">gestor_de_matriculas.curso</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_gestor_curso" name="Cursos" parent="menu_gestor_matriculas_root" action="action_curso"/>
</odoo>
